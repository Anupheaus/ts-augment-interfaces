{
  "compilerOptions": {
    "baseUrl": "./packages",
    "paths": {
      "ts-augment-interfaces-base": [
        "base/src"
      ],
      "ts-augment-interfaces-augmenter": [
        "augmenter/src"
      ],
      "ts-augment-interfaces-user": [
        "user/src"
      ],
    },
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "importHelpers": false,
    "noEmit": true,
    "removeComments": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react"
  },
  "exclude": [
    "dist"
  ]
}